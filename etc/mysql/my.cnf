[mysqldump]
quick
quote-names
max_allowed_packet = 500M

[mysql]
no-auto-rehash

[isamchk]
key_buffer	        = 16M
sort_buffer_size        = 256k
read_buffer             = 256k
write_buffer            = 256k

[myisamchk]
key_buffer_size         = 16M
sort_buffer_size        = 256k
read_buffer             = 256k
write_buffer            = 256k

